{% extends 'Authentification.twig' %}

{% block body %}
        <div class="login-dark">
            <form method="post">
                <div class="illustration">
                    <i class="icon ion-person-add"></i>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" id="username" value="Admin">
                    {% if errorForm %}
                        {% for error in errorForm %}                                    
                                {% if error.username %}
                                    <div class="text-muted"><i>{{ error.username.message}}</i></div>
                                {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="form-group">
                    <input class="form-control" type="email" name="email" id="email" value="admin@mail.com">
                    {% if errorForm %}
                        {% for error in errorForm %}                                    
                                {% if error.email %}
                                    <div class="text-muted"><i>{{ error.email.message}}</i></div>
                                {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password"  id="password" value="Admin1234">
                    {% if errorForm %}
                        {% for error in errorForm %}                                    
                                {% if error.password %}
                                    <div class="text-muted"><i>{{ error.password.message}}</i></div>
                                {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            
                <div class="form-group">
                    <input class="form-control" type="password"  name="cpassword" id="password" value="Admin1234">
                    {% if errorForm %}
                        {% for error in errorForm %}                                    
                                {% if error.cpassword %}
                                    <div class="text-muted"><i>{{ error.cpassword.message}}</i></div>
                                {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="form-group sub">
                    <button class="btn btn-primary btn-block mb-3" type="submit">Sign Up</button>
                    <a href="/users/adminlogin" class="forgot">You have an account ?</a>
                </div>
            </form>
        </div>
               
{% endblock %}