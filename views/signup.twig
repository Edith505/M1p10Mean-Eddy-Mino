{% extends 'Authentification.twig' %}

{% block body %}
        <div class="login-dark">
            <form method="post">
                
                <div class="illustration">
                    <i class="icon ion-person-add"></i>
                </div>

                <div class="form-group">
                    <input class="form-control" type="username" name="username" id="username" placeholder="Userame">
                </div>

                <div class="form-group">
                    <input class="form-control" type="fullname" name="fullname" id="fullname" placeholder="Full Name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="email" name="email" id="email" placeholder="Email">
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password"  id="password" placeholder="Password">
                </div>

                <div class="form-group">
                    <input class="form-control" type="password"  id="cpassword" placeholder="Re-type your Password">
                </div>

                <div class="form-group sub">
                    <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
                </div>
                

                <a href="/users/login" class="forgot">You have an account ?</a>
            </form>
        </div>
{% endblock %}