{% extends 'Authentification.twig' %}

{% block body %}
        <div class="login-dark">
            <form method="post">
                {% if success %}
                    <div class="p-3 bg-secondary text-white" role="alert">{{success}}</div>
                {% endif %}
                {% if error %}
                    <div class="p-3 bg-secondary text-white" role="alert">{{error}}</div>
                {% endif %}
                <div class="illustration">
                    <i class="icon ion-ios-locked-outline"></i>
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="username" value="Electricien">
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password" value="Elec1234">
                </div>

                <div class="form-group sub">
                    <button class="btn btn-primary btn-block" type="submit">Log In</button>
                </div>

                <a href="/users/ateliersignup" class="forgot mt-3"><i class="icon ion-person-add"></i>  Creat an account</a>
            </form>
        </div>
{% endblock %}